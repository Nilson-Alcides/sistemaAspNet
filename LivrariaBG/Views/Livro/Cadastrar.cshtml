                </div>
                @*__________________________________________FIM 3º LINHA__________________________________________________*@
            <div class="form-row">
                <div class="form-group col-md-2">                  
                    @Html.DropDownListFor(model => model.idCategoria, ViewBag.Lista as IEnumerable<SelectListItem>, "Selecione a Categoria")                   

                </div>
                @*<div class="form-group col-md-2">                    
                    @Html.DropDownListFor(model => model.idEditora, ViewBag.Lista as IEnumerable<SelectListItem>, "Selecione a Editora",
                    htmlAttributes: new { @class = "form-control" })

                </div>*@
            </div>
                    @*__________________________________________FIM 3º LINHA__________________________________________________*@


                    <div class="form-group">
                        <div class="form-actions no-color">
                            <input type="submit" value="Salvar" class="btn btn-primary" /> |

                            <a class="btn btn-primary " href="/Livro/ConsultarTodosLivros/" role="button">
                                Cancelar
                            </a>
                        </div>

                    </div>


            </form>
        </div>
    </section>

}
<script>
    $(document).ready(function () {
        //$("#valorUnit").inputmask("mask", { "mask": "#.##9,99" }, { reverse: true });        $('#valorUnit').mask('#.##0,00', { reverse: true });        //$("#valorUnit").inputmask("mask", { "mask": "999.999,99" }, { reverse: false });
        //$("#cpfCliente").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
        $("#isbn").inputmask("mask", { "mask": "999-99-99999-99-9" });       
        $("#dataLanc").inputmask("mask", { "mask": "99/99/9999" });
    });
</script>


@Scripts.Render("~/bundles/inputmask")
