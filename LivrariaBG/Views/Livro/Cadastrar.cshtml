                        @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.valorUnit, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.valorUnit, new { htmlAttributes = new { placeholder = "9999,99", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.valorUnit, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*_____________________________________________FIM 1º LINHA______________________________________________________*@

                @*__________________________________________INICIO 2º LINHA ____________________________________________*@
                <div class="form-row">
                    <div class="form-group col-md-6">
