                        @Html.LabelFor(model => model.editora, htmlAttributes: new { @class = "control-label col-md-2" })                        <
                        @Html.EditorFor(model => model.editora, new { htmlAttributes = new { placeholder = "Informe editora", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.editora, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.formato, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.formato, new { htmlAttributes = new { placeholder = "Informe formato", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.formato, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.categoria, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.categoria, new { htmlAttributes = new { placeholder = "Informe categoria", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.categoria, "", new { @class = "text-danger" })

                    </div>
