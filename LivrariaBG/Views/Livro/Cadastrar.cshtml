                    <div class="form-group col-md-3">
                        @Html.LabelFor(model => model.isbn, htmlAttributes: new { @class = "control-label col-md-3" })
                        @Html.EditorFor(model => model.isbn, new { htmlAttributes = new { placeholder = "Informe 999-99-99999-99-9", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.isbn, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-7">
                        @Html.LabelFor(model => model.titulo, htmlAttributes: new { @class = "control-label col-md-7" })
