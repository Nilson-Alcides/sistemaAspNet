                        @Html.EditorFor(model => model.capaLivro, new { htmlAttributes = new { placeholder = "Informe capa", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.capaLivro, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.paginas, htmlAttributes: new { @class = "control-label col-md-2" })                        <
                        @Html.EditorFor(model => model.paginas, new { htmlAttributes = new { placeholder = "99999", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.paginas, "", new { @class = "text-danger" })

                    </div>
                </div>
                @*__________________________________________FIM 2º LINHA__________________________________________________*@
                @*__________________________________________INICIO 3º LINHA ____________________________________________*@
                <div class="form-row">
                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.estoque, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.estoque, new { htmlAttributes = new { placeholder = "99999", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.estoque, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.autor, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.autor, new { htmlAttributes = new { placeholder = "Informe autor", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.autor, "", new { @class = "text-danger" })

                    </div>
