@model IEnumerable<Dominios.Livro>
<section class="layout-content">

    <nav class="navbar navbar-expand-md bg-light">
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <i class="fas fa-caret-right"></i>
                    <span>Lista de Livros</span>
                </li>
            </ul>
            <a class="btn btn-outline-primary" href="/Livro/cadastrar" role="button">
                <span class="fas fa-user-plus" title="Cadastro" aria-hidden="true"></span>
                <span>Cadastrar Livros</span>
            </a>
        </div>
    </nav>

    <div class="container">
        <div id="list-home" class="row">
            <div class="col-4">
                <h1></h1>
            </div>
        </div>
        <div class="table-responsive">

            <table id="ListaLivros" class="table table-striped table-hover table-sm">

                <thead class="thead-dark">

                    <tr>
                        <th>ID</th>
                        <th>Tituto</th>
                        <th>ISBN</th>
                        <th>Valor</th>
                        <th>Estoque</th>
                        <th>Lançamento</th>
                        <th>Descrição</th>
                        <th>Ação</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var livro in Model)
                    {
                        <tr>
                            <td>@livro.idLivro</td>
                            <td>@livro.titulo</td>
                            <td>@livro.isbn</td>
                            <td>@livro.valorUnit</td>
                            <td>@livro.estoque</td>


                            <td>
                                <button type="button" class="btn btn-secondary btn-sm" data-container="body"
                                        data-toggle="popover" data-placement="top"
                                        data-content="@livro.dataLanc">
                                    <span class="fas fa-eye" title="Visualizar" aria-hidden="true"></span>
                                </button>
                            </td>
                            <td>
                                <button type="button" class="btn btn-secondary btn-sm" data-container="body"
                                        data-toggle="popover" data-placement="top"
                                        data-content="@livro.descricao">
                                    <span class="fas fa-eye" title="Visualizar" aria-hidden="true"></span>
                                </button>
                            </td>

                            <td colspan="2">
                                <a class="btn btn-info btn-sm" href="/Livro/ConsultarLivrosId/@livro.idLivro" role="button">
                                    <span class="fas fa-info-circle" title="Detalhes" aria-hidden="true"></span>
                                </a>
                                <a class="btn btn-info btn-sm" href="/Livro/AtualizarLivro/@livro.idLivro" role="button">
                                    <span class="fas fa-edit" title="Atualizar" aria-hidden="true"></span>
                                </a>

                                <a class="btn btn-info btn-sm" href="/Livro/Delete/@livro.idLivro" role="button">
                                    <span class="fas fa-trash-alt" title="Excluir" aria-hidden="true"></span>
                                </a>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</section>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.bootstrap4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.print.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.colVis.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        var table = $('#ListaLivros').DataTable({
            lengthChange: false,
            paging: false,
            ordering: false,
            info: false,
        });

        table.buttons().container()
            .appendTo('#ListaLivros_wrapper_wrapper .col-md-6:eq(0)');
    });
</script>

